<%- include("_header") -%>

<h2>Customer Export</h2>

<h5>Total number of records in the database: <%= model.totalRecords %></h5>

<p>Enter a file name and click "Export Customers"</p>

<form action="/export" method="post">
  <div class="form-horizontal">
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="fileName">File Name</label>
      <div class="col-sm-10">
        <input
          class="form-control"
          name="fileName"
        />
      </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Export Customers" class="btn btn-default btn-primary" />
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>